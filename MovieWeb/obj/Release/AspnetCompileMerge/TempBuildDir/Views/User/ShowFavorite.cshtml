﻿<div class="hero common-hero">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="hero-ct">
                    <h1> @Model.TaiKhoan</h1>
                    <ul class="breadcumb">
                        <li class="active"><a href="@Url.Action("Home","Movie")" style="font-weight: bold; }">Trang chủ</a></li>
                        <li> <span class="ion-ios-arrow-right"></span> Phim yêu thích</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-single">
    <div class="container">
        <div class="row ipad-width">
            @Html.Partial("menu_profile")
            <div class="col-md-9 col-sm-12 col-xs-12">
                <div class="form-style-1 user-pro" action="">
                    @foreach (var item in Model.DaXem)
                    {
                        <div class="flex-wrap-movielist user-fav-list">
                            <div class="movie-item-style-2">
                                <img src="~/Content/MoviePosters/@item.HinhBanner" alt="">
                                <div class="mv-item-infor">
                                    <h6><a href="#">@item.TenPhim <span>(@item.NgaySanXuat.ToString("yyyy"))</span></a></h6>
                                    <p class="rate"><i class="ion-android-star"></i><span>@item.DiemIMDB</span> /10</p>
                                    <p class="describe">@item.NoiDungPhimTomTat</p>
                                    <p class="run-time"> Run Time: @item.ThoiLuong.ToString()m     .     <span>Release: @item.NgaySanXuat.ToString("dd/MM/yyyy")</span></p>
                                    <p>
                                        Director:
                                        @foreach (var item1 in item.DaoDiens)
                                        {
                                            <a href="#">@item1.TenDaoDien</a>
                                        }
                                    </p>
                                    <p>
                                        Stars:
                                        @foreach (var item1 in item.DienVienDongPhims)
                                        {
                                            <a href="#">@item1.DienVien.TenDienVien</a>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>