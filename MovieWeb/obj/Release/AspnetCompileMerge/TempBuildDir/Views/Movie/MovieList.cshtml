@model PagedList.IPagedList<MovieWeb.Models.Phim>
@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="hero common-hero">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="hero-ct">
                    <h1> Danh sách phim - danh sách</h1>
                    <ul class="breadcumb">
                        <li class="active"><a href="@Url.Action("Home","Movie")" style="font-weight: bold; }">Trang chủ</a></li>
                        <li> <span class="ion-ios-arrow-right"></span> Danh sách phim</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-single movie_list">
    <div class="container">
        <div class="row ipad-width2">
            <div class="col-md-8 col-sm-12 col-xs-12">
                <div class="topbar-filter">
                    <p>Tìm thấy <span>@ViewBag.FoundNum phim</span> trên tổng số 3041 phim</p>
                    <label>Sắp xếp theo:</label>
                    <select>
                        <option value="popularity">Sắp xếp giảm dần</option>
                        <option value="popularity">Popularity Ascending</option>
                        <option value="rating">Rating Descending</option>
                        <option value="rating">Rating Ascending</option>
                        <option value="date">Release date Descending</option>
                        <option value="date">Release date Ascending</option>
                    </select>
                    <a href="@Url.Action("MovieList", "Movie")"><i class="ion-ios-list-outline "></i></a>
                    <a href="@Url.Action("MovieGrid", "Movie")"><i class="ion-grid active"></i></a>
                </div>
                
                @foreach(var item in Model)
                    {
            <div class="movie-item-style-2">
                    <img src="~/Content/MoviePosters/@item.HinhBanner" alt="">
                <div class="mv-item-infor">
                    <h6><a href="moviesingle.html">@item.TenPhim <span>@item.NgaySanXuat.Value.Year</span></a></h6>
                    <p class="rate"><i class="ion-android-star"></i><span>@item.DiemIMDB</span> /10</p>
                    <p class="describe">@item.NoiDungPhimTomTat</p>
                    <p class="run-time"> Thời lượng: @item.ThoiLuong phút     .     <span>Ngày sản xuất: @item.NgaySanXuat.Value.Day / @item.NgaySanXuat.Value.Month / @item.NgaySanXuat.Value.Year</span></p>
                   
                    <div class="hvr-inner btn " >
                        <a href="@Url.Action("MovieDetail", "Movie", new { id = item.MaPhim})" style="color:yellow"> Xem thêm <i class="ion-android-arrow-dropright"></i> </a>
                    </div>
                </div>
            </div>
                }

                <div class="topbar-filter">
                    <label style="color: white">Đang ở trang:</label>

                    <span style="color: white">Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount:</span>
                    <div class="pagination2">
                        @Html.PagedListPager(Model, page => Url.Action("MovieList", new { page = page }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 col-sm-12 col-xs-12">
                <div class="sidebar">
                    @Html.Action("Filter", "Movie")
                    <div class="ads">
                        <img src="~/Content/Logo.png" alt="" width="336" height="296">
                    </div>
                    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v14.0&appId=689125921801226&autoLogAppEvents=1" nonce="W9mqCUoY"></script>
                    <div class="sb-facebook sb-it">
                        <h4 class="sb-title">Facebook của Twoone</h4>
                        <div class="fb-page" data-href="https://www.facebook.com/Twoone-103646042401175" data-tabs="Twoone" data-width="300" data-height="315" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true">
                            <blockquote cite="https://www.facebook.com/Twoone-103646042401175" class="fb-xfbml-parse-ignore">
                                <a href="https://www.facebook.com/Twoone-103646042401175">Twoone</a>
                            </blockquote>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>