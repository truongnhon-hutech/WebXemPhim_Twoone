@model IEnumerable<MovieWeb.Models.HashTag>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã Tag
        </th>
        <th>
            Tên Tag
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaHashTag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenTag)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaHashTag }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaHashTag }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaHashTag })
            </td>
        </tr>
    }

</table>