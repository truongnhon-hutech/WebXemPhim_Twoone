@model MovieWeb.Models.NgonNgu

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-body">

            <h3 class="box-title">Thông tin</h3>
            <div class="table-responsive">
                <table class="table table-striped table-product">
                    <tbody>
                        <tr>
                            <td>Mã ngôn ngữ</td>
                            <td>@Html.DisplayFor(model => model.MaNgonNgu)</td>
                        </tr>
                        <tr>
                            <td>Tên ngôn ngữ</td>
                            <td>@Html.DisplayFor(model => model.TenNgonNgu)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.MaNgonNgu }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
