@model MovieWeb.Models.DienVien

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Administrator/Views/Shared/_AdminLayout.cshtml";
}

<h2>Details</h2>


<div class="container">
    <div class="card">
            <h3 class="card-header">Mã diễn viên @Model.MaDienVien</h3>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center"><img src="~/Content/sample/@Model.HinhAnhDienVien" class="img-responsive" width="200" height="260"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Tên diễn viên: </h4>
                    <p>@Model.TenDienVien</p>

                </div>
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.MaDienVien }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
